
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
    
    match /config/wallet {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /users/{userId} {
      // Allow any authenticated user to read any profile for transfers.
      allow read: if request.auth != null;
      
      // Any authenticated user can query the collection.
      // This is required for referral code lookup and the admin user list.
      allow list: if request.auth != null;

      // Users can create their own profile on signup.
      // They cannot make themselves an admin and must start with the default coin amount.
      allow create: if isOwner(userId)
                    && request.resource.data.admin == false
                    && request.resource.data.coins == 200;
      
      // Users can update their own document, but cannot change their admin status, blocked status, or logout status.
      // Admins can update 'blocked' and 'disableLogout' status.
      // Any user can update another user's 'coins' field (for transfers).
      allow update: if (
                      isOwner(userId) &&
                      request.resource.data.admin == resource.data.admin &&
                      request.resource.data.blocked == resource.data.blocked &&
                      request.resource.data.disableLogout == resource.data.disableLogout
                    ) || (
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coins'])
                    ) || (
                      isAdmin() && request.resource.data.diff(resource.data).hasAny(['blocked', 'disableLogout'])
                    );


      // Nobody can delete user documents.
      allow delete: if false;

      match /transactions/{transactionId} {
        // Users can read/list their own transactions.
        allow read, list: if isOwner(userId);
        
        // A user can create their own transaction log.
        // Another user can create a transaction log for them ONLY if it's a credit (amount > 0).
        allow create: if isOwner(userId) || request.resource.data.amount > 0;
        
        // Transactions are immutable.
        allow update, delete: if false;
      }

      match /activity/{activityId} {
        allow create: if isOwner(userId);
        allow read, list: if isAdmin();
        allow update, delete: if false;
      }
    }
    
    match /friendRequests/{requestId} {
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      // A user can read a request if they are a participant.
      // List operations are implicitly allowed if the query constrains
      // to documents the user can read.
      allow read, list: if isParticipant();
      
      // A user can create a request if they are the sender, status is pending, 
      // and they are in the participants array.
      allow create: if request.auth.uid == request.resource.data.from
                    && request.resource.data.status == 'pending'
                    && request.auth.uid in request.resource.data.participants;

      // The recipient can update the status from 'pending' to 'accepted' or 'declined'.
      allow update: if request.auth.uid == resource.data.to
                    && resource.data.status == 'pending'
                    && request.resource.data.status in ['accepted', 'declined'];
                    
      // A participant can delete a declined or accepted request (unfriend)
      allow delete: if isParticipant() && resource.data.status != 'pending';
    }

    match /chats/{chatId} {
      function isChatParticipantFromData() {
        return request.auth.uid in resource.data.participants;
      }

      function isChatParticipantFromId() {
        return request.auth.uid in chatId.split('_');
      }
      
      allow read: if isChatParticipantFromData();
      
      allow list: if request.auth.uid != null;
      
      allow create: if request.auth.uid in request.resource.data.participants;

      allow update: if isChatParticipantFromData() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage']);

      match /messages/{messageId} {
        allow read, list: if isChatParticipantFromId();
        
        allow create: if request.resource.data.senderId == request.auth.uid && isChatParticipantFromId();
        
        allow update, delete: if false;
      }
    }
  }
}
