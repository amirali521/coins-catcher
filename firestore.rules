
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for auth and existence before getting data to prevent errors.
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
    
    match /config/wallet {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow list: if request.auth != null;

      allow create: if isOwner(userId)
                    && request.resource.data.admin == false
                    && request.resource.data.coins == 200;
      
      allow update: if
        // SCENARIO 1: A user is updating their OWN profile (e.g., claiming rewards, changing settings).
        ( isOwner(userId) &&
          // They are not allowed to change their admin status, or unblock/enable logout for themselves.
          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['admin', 'blocked', 'logoutDisabled'])
        ) ||
        // SCENARIO 2: Another user (sender) is updating this user's (receiver) coin balance for a transfer.
        ( !isOwner(userId) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coins'])
        ) ||
        // SCENARIO 3: An admin is updating 'blocked' or 'logoutDisabled' status on another user.
        ( isAdmin() && !isOwner(userId) &&
          (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['blocked']) ||
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['logoutDisabled']) ||
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['blocked', 'logoutDisabled'])
          )
        );


      allow delete: if false;

      match /transactions/{transactionId} {
        allow read, list: if isOwner(userId);
        
        // Allow creating a transaction for oneself, or for another user if it's a credit.
        allow create: if isOwner(userId) || request.resource.data.amount > 0;
        
        // Transactions are immutable.
        allow update, delete: if false;
      }
    }
  }
}
